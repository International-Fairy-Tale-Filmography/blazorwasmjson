@page "/"

@inject HttpClient Http

<PageTitle>Filmography</PageTitle>
<br/><br />
<MudGrid Justify="Justify.Center">

    <MudItem xs="12" sm="6" lg="3" >

        <MudCard>
            <MudCardMedia Image="images/films.jpg" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Films</MudText>
                <MudText Typo="Typo.body2">Search the filmography by film details</MudText>
           
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="films">Go</MudButton>
            </MudCardActions>
        </MudCard>

    </MudItem>
    <MudItem xs="12" sm="6" lg="3" >

        <MudCard>
            <MudCardMedia Image="images/actors.jpg" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Actors</MudText>
                <MudText Typo="Typo.body2">Search the filmography by Actors in the film</MudText>
          
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Go</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
